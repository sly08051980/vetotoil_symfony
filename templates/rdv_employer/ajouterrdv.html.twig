{% extends 'base.html.twig' %}

{% block title %}Cr√©neaux RDV
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="card custom-box-shadow p-3 mb-5 bg-body rounded">
			<div class="row">
				<div class="col-12 justify-content-center text-center">
					<h1>
						Ajouter un RDV
					</h1>
				</div>
			</div>
		</div>


		<div class="row justify-content-center mb-5 ">
			<div class="col-lg-6 justify-content-center text-center">
				<div class="card custom-box-shadow rounded">
					<div class="d-flex align-items-center justify-content-center">
						<label class="mb-0">Nom:</label>
						<p class="mb-0 ml-2">{{ rechercher.nom }}</p>
					</div>
					<div class="d-flex align-items-center justify-content-center">
						<label class="mb-0">Prenom:</label>
						<p class="mb-0 ml-2">{{ rechercher.Prenom }}</p>
					</div>
					<div class="d-flex align-items-center justify-content-center">
						<label class="mb-0">Email:</label>
						<p class="mb-0 ml-2">{{ rechercher.email }}</p>
					</div>

					{{ form_errors(form) }}
					{{ form_start(form) }}
					{{ form_row(form.date_rdv, {'attr': {'readonly': 'readonly'}}) }}
					{{ form_row(form.heure_rdv, {'attr': {'readonly': 'readonly'}}) }}
					{{ form_row(form.status_rdv, {
                     'label_attr': {'class': 'hidden-form-rdv'},
                     'attr': {'class': 'hidden-form-rdv'}
                        }) }}
					{{ form_row(form.societe, {
                     'label_attr': {'class': 'hidden-form-rdv'},
                     'attr': {'class': 'hidden-form-rdv'}
                        }) }}
					{{ form_row(form.employer, {
                     'label_attr': {'class': 'hidden-form-rdv'},
                        'attr': {'class': 'hidden-form-rdv'}
                    }) }}
					{{ form_row(form.patient, {
                        'label_attr': {'class': 'hidden-form-rdv'},
                     'attr': {'class': 'hidden-form-rdv'}
                    }) }}

					<label for="animal-select" class="mb-5">Choisissez un animal :</label>
					<select id="animal-select" name="animal">

						{% for animal in animaux %}
							<option value="{{ animal.id }}">{{ animal.prenomAnimal }}</option>
						{% endfor %}
					</select>
					{{ form_widget(form.submit, {'attr': {'class': 'btn btn-custom rounded pill mb-5'}}) }}
					{{ form_end(form) }}
				</div>
			</div>
		</div>


	</div>
{% endblock %}
