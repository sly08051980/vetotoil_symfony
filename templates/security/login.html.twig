{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('turbo:load', function() {
            Turbo.session.drive = false;
        });
    </script>
{% endblock %}
{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}
		<div class="container pb-5 pt-5" id="inscription">
			<div class="row pb-5 ">
				<div class="card custom-box-shadow">
					<div class="col-12 justify-content-center py-5">
						<h1 class="text-center">Connexion</h1>
					</div>
				</div>
			</div>
			<div class="card custom-box-shadow">
				<div class="row justify-content-center">
					<div class="col-lg-6">
						<label for="username">Email</label>
						<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
						<label for="password">Password</label>
						<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<a href="#">Mot de passe oubli√©</a>
						<p class="mt-5">
							Pas de compte inscrivez vous en cliquant
							<a href="{{ path('app_register', {'role': 'ROLE_PATIENT'}) }}">ici pour les particulier</a>
							ou
							<a href="{{ path('app_register', {'role': 'ROLE_SOCIETE'}) }}">ici pour les professionnel</a>
						</p>

						<button class="btn btn-custom rounded-pill mt-5 mb-5" type="submit">
							Connexion
						</button>
					</div>
				</div>
			</div>
		</form>
	</div>

{% endblock %}
