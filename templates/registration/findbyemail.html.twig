{% extends 'base.html.twig' %}

{% block title %}Recherche par Email
{% endblock %}

{% block body %}


	<div class="container pb-5 pt-5" id="inscription">
		<div class="row pb-5 ">
			<div class="card custom-box-shadow">
				<div class="col-12 justify-content-center py-5">
					<h1 class="text-center">Recherche par Email</h1>
				</div>
			</div>
		</div>
	<div class="row">
    <div class="card custom-box-shadow col-6">
   
        <form method="GET" action="{{ path ('find_by_email') }}">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" class="form-control">
            </div>
            <input type="submit" value="Rechercher" class="btn btn-primary">
        </form>
    </div>
    </div>
</div>

	</div>
{% endblock %}
