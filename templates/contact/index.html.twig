{% extends 'base.html.twig' %}

{% block title %}Page de contact
{% endblock %}

{% block body %}


	<div class="container">
		<div class="row pb-5 pt-5 ">
			<div class="card custom-box-shadow">
				<div class="col-12 justify-content-center py-5">
					<h1 class="text-center">Contact</h1>


				</div>
			</div>
		</div>
		{{ form_errors(form) }}
		{{ form_start(form) }}
		<div class="row justify-content-center">
			<div class="col-lg-5">
    <div class="card custom-box-shadow p-3 mb-5 bg-body rounded">
        <div class="form-group mb-3">
            {{ form_label(form.sujet, null, {'label_attr': {'class': 'form-label label-large'}}) }}
            {{ form_widget(form.sujet, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.sujet) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.email, null, {'label_attr': {'class': 'form-label label-large'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label label-large'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.prenom, null, {'label_attr': {'class': 'form-label label-large'}}) }}
            {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prenom) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.telephone, null, {'label_attr': {'class': 'form-label label-large'}}) }}
            {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.telephone) }}
        </div>
    </div>
</div>
			<div class="col-lg-7 card custom-box-shadow bg-body rounded">
				{{ form_row(form.message, {
    'attr': {'class': 'form-control w-100', 'style': 'width: 100%;'},
    'label_attr': {'class': 'label-large'}
}) }}
<div class="row justify-content-center">
			<div class="col-lg-4 mt-5">
				{{ form_row(form.submit, {'label_attr': {'class': 'label-large'}}) }}
                </div>
                </div>
			</div>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
